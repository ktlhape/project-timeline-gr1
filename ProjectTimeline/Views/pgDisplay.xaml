<Page x:Class="ProjectTimeline.Views.pgDisplay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectTimeline.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgDisplay">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="1" x:Name="lstDisplay" FontSize="30"/>
        <RadioButton x:Name="rdoAll" Content="All Projects" GroupName="filter" HorizontalAlignment="Left" Margin="106,50,0,0" VerticalAlignment="Top" Click="rdoAll_Click"/>
        <RadioButton x:Name="rdoWeeks" Content="Six Weeks" GroupName="filter" HorizontalAlignment="Left" Margin="604,53,0,0" VerticalAlignment="Top" Click="rdoWeeks_Click"/>
        <RadioButton x:Name="rdoBetweenDates" Content="Between Dates" GroupName="filter" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" Click="rdoBetweenDates_Click"/>

    </Grid>
</Page>
